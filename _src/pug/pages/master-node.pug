
extends ../templates/_main-node.pug
include ../helpers/mixins.pug


block content

	section.promo
		.promo__inner.container
			.promo__title-wrap
				h1.promo__title
					|Мастернода

			.promo__video.video
				.video__inner
					lite-youtube.video__youtube(videoid="MyRhhKPbU8k" style="background-image: url('/img/desc.jpg');")



	.fire.mb160

		section.coin.mb160
			.coin__inner.container
				.coin__header
					h2.coin__title.title Монеты мастернод
					a.coin__link.link.link--node(href="#") Заказать настройку

				.coin__list
					each val, i in coin
						a.coin__item.coin-point.swiper-slide(href="#")
							.coin-point__inner
								figure.coin-point__img(class=`coin-point__img--${i+1}`)
								.coin-point__box
									h3.coin-point__title= `${val[0]}`
									p.coin-point__text= `${val[1]}`




		.fire__bg.fire__bg--right
			+img-retina('fire_bg_right', 'png', 'фон', 'fire__img-bg-r', '579', '1160')

		.fire__bg.fire__bg--bottom
			+img-retina('fire_bg_bottom', 'png', 'фон', 'fire__img-bg-b', '937', '1325')

		.fire__bg.fire__bg--3
			+img-retina('fire_bg_bottom', 'png', 'фон', 'fire__img-bg-b', '937', '1325')

		.fire__bg.fire__bg--4
			+img-retina('fire_bg_bottom', 'png', 'фон', 'fire__img-bg-b', '937', '1325')

		.fire__bg.fire__bg--5
			+img-retina('fire_bg_bottom', 'png', 'фон', 'fire__img-bg-b', '937', '1325')





		section.programs
			.programs__inner.programs__inner--node.container.container--programs
				.programs__title-wrap
					h2.programs__title.title(data-scroll data-scroll-speed="1")  Реферальная программа


				.programs__right.programs__right--node
					ul.programs__list.bonus
						each item in bonus_node
							li.bonus__item
								figure.bonus__img
								p.bonus__text.bonus__text--node= item
					a.programs__link(href="#") Подробнее об условиях программы





	section.modal.modal--registration#modal-registration
		.modal__wrapper.container
			.modal__header
				a.modal__logo.logo(href="/index.html")
					+img-retina(`logo`, `png`, `логотип`, `logo__img`, `145`, `46`)
				h2.modal__title Реферальные программы
				a.modal__link-close(href="#" rel="modal:close" aria-label="закрыть")

			.modal__content
				.modal__inner.tabs-block
					.tabs-block__header.tabs-header
						h3.tabs-header__title Обьем структуры
						ul.tabs-header__list(data-tabs='true')
							each item, i in tabs_item
								li.tabs-header__item
									if i === 0
										a.tabs-header__link(href=`#tab-${i+1}` data-tabby-default)= item
									else
										a.tabs-header__link(href=`#tab-${i+1}`)= item
					.tabs-block__wrap
						.tabs-block__content.table.level
							.table__header.table-row.table-header
								each item in table_header_modal
									.table-header__item.table-row__item(class= item[1])= item[0]
							each item, i in tabs_item
								.level__content(id=`tab-${i+1}`)

									while n  < 7
										- n++
										.table-row
											each elem,j in table_header_modal
												if j === 0
													.table-row__item(class= elem[1])= `${n} уровень`
												if j === 1
													.table-row__item(class= elem[1]) 1%
												if j === 2
													.table-row__item(class= elem[1]) 0.5%
													|
									- n = 0
